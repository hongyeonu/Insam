<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/insam"
    tools:context=".LoginActivity">

    <!--android:layout_above="@+id/null"-->


    <TextView
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="34dp"
        android:gravity="center"
        android:text="배지 도감"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="75dp"
        android:background="#2a222222"
        android:columnCount="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/badge_dream_easy"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="20dp"
            android:src="@drawable/badge_dream_easy" />

        <ImageView
            android:id="@+id/badge_dream_normal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/badge_dream_normal" />

        <ImageView
            android:id="@+id/badge_dream_hard"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/badge_dream_hard" />

        <ImageView
            android:id="@+id/badge_seven_easy"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/badge_seven_easy" />

        <ImageView
            android:id="@+id/badge_seven_normal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/badge_seven_normal" />

        <ImageView
            android:id="@+id/badge_seven_hard"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/badge_seven_hard" />

        <ImageView
            android:id="@+id/badge_dream_special"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/badge_dream_special" />

        <ImageView
            android:id="@+id/badge_seven_special"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/badge_seven_special" />


    </GridLayout>

</RelativeLayout>
